[
  {
    "name" : "${product}-${env}-front-container",
    "portMappings": [
      {
        "hostPort": 80,
        "protocol": "tcp",
        "containerPort": 80
      }
    ],
    "command": [
      "/bin/sh",
      "-c",
      "nginx -g 'daemon off;'"
    ],
    "cpu": ${cpu},
    "memory": ${memory},
    "memoryReservation": ${memory},
    "image": "${image-url}:latest",
    "environment": [
      {
        "name": "HOGE",
        "value": "${hoge}"
      }
    ],
    "healthCheck": {
      "retries": 10,
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost/ || exit 1"
      ],
      "timeout": 20,
      "interval": 60,
      "startPeriod": 120
    },
    "essential": true
  }
]
